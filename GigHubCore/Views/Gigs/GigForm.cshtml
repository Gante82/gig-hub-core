@model GigHubCore.ViewModels.GigFormViewModel

@{
    ViewData["Title"] = Model.Heading;
}

<h2>@Model.Heading</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Gigs" asp-action="@Model.Action" method="post">
            <input type="hidden" asp-for="Id" />
            <p class="alert alert-info">All fields are <strong>required</strong>.</p>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Venue" class="control-label"></label>
                <input asp-for="Venue" class="form-control" autofocus />
                <span asp-validation-for="Venue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" placeholder="eg 1 Jan 2015" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Time" class="control-label"></label>
                <input asp-for="Time" class="form-control" placeholder="eg 11:00 AM" />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genre" class="control-label"></label>
                <select asp-for="Genre" class="form-control" asp-items="@(new SelectList(Model.Genres, "Id", "Name"))">
                    <option></option>
                </select>
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
